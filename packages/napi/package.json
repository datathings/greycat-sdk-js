{
  "name": "@greycat/napi",
  "version": "0.0.0",
  "description": "Greycat Native N-API Binding",
  "main": "./dist/cjs/index.js",
  "typings": "./dist/typings/index.d.ts",
  "author": "DataThings S.Ã .r.l",
  "license": "MIT",
  "bin": {
    "greycat-print-lib": "./lib/print-lib.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && yarn compile",
    "compile": "yarn compile:cjs && yarn compile:typings",
    "compile:cjs": "ncc -m build src/index.ts -o dist/cjs -e @greycat/common",
    "compile:typings": "tsc -b tsconfig.typings.json",
    "test": "tslint --project '.'",
    "prepackage": "./../../scripts/update-pkg.js ${VERSION:-0.0.0}",
    "package": "yarn pack --filename ${DIST_DIR:-dist}/generic/ts/greycat-napi.tgz"
  },
  "dependencies": {
    "@greycat/common": "0.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.27"
  }
}
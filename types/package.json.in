{
  "name": "@greycat${TS_SCOPE_PREFIX}/types",
  "version": "${GREYCAT_VERSION}",
  "description": "Greycat Standard Library Types",
  "main": "./lib/index.js",
  "typings": "./typings/index.d.ts",
  "author": "DataThings S.Ã .r.l",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "compile": "yarn compile:src && yarn compile:schema",
    "compile:src": "tsc -b tsconfig.build.json",
    "compile:schema": "typescript-json-schema src/ts/types.ts GreycatStdLibs -o test/std.types.schema.json",
    "test": "node test/validate.js",
    "clean": "rm -rf lib/*.js lib/*.tsbuildinfo typings test/std.types.schema.json",
    "package": "yarn pack --filename greycat-types.tgz"
  },
  "devDependencies": {
    "ajv": "^6.12.0",
    "typescript-json-schema": "^0.42.0"
  }
}

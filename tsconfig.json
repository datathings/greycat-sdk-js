{
  "compilerOptions": {
    "outDir": "dist",

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "useDefineForClassFields": false,
    "strict": true,

    "declaration": true,
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["src/std/"],
}

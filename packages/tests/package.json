{
  "private": true,
  "name": "greycat-ts-tests",
  "version": "0.0.0",
  "description": "GreyCat Tests with both N-API & WASM",
  "author": "DataThings S.Ã .r.l",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "compile": "tsc -b tsconfig.build.json && webpack",
    "watch": "tsc -b tsconfig.build.json -w",
    "pretest": "tslint --project '.'",
    "test": "yarn test:napi && yarn test:wasm",
    "test:napi": "mocha -r ts-node/register src/**/*.test.ts",
    "test:wasm": "#./wasm-tests.sh",
    "clean": "rm -rf lib dist",
    "package": "echo \"greycat-ts-tests is not published: no package\""
  },
  "dependencies": {
    "@greycat/common": "0.0.0",
    "@greycat/napi": "0.0.0",
    "@greycat/wasm": "0.0.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}